BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: '100dp'

            Button:
                text: 'Square'
                on_press: app.handle_calculate(input_number.text)

        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False

        Label:
            id: output_label
            font_size: 48
            color: (1, 0, 1, 1)  # Pink color

    Label:
        text: 'Enter a number and press "Square"'
        font_size: 24
        size_hint_y: None
        height: '48dp'

