BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        size_hint_y: None
        height: '48dp'

        Button:
            text: 'Up'
            on_press: app.handle_increment(1)

        TextInput:
            id: input_miles
            text: '0'
            font_size: 24
            multiline: False
            input_filter: 'int'
            on_text: app.on_text_change(self.text)

        Button:
            text: 'Down'
            on_press: app.handle_increment(-1)

    # Commenting out the Convert button as instructed
    # Button:
    #     text: 'Convert'
    #     on_press: app.handle_convert(input_miles.text)

    Label:
        id: output_label
        text: '0.0 km'
        font_size: 24
        color: (1, 1, 0, 1)  # Yellow text
        halign: 'center'
        valign: 'middle'
        text_size: self.size
